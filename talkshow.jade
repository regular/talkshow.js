!!!
html
    head
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        script(src='jquery.min.js')
        script(src='underscore.js')
        script(src='Grid.js')
        script(src='Scanner.js')
        script(src='NavigationController.js')
        script(src='DataSource.js')
        script(src='NavigationDataSource.js')
        script(src='CellFactory.js')
        script(src='Settings.js')
        script(src='KeyboardInput.js')
        script(src='Talkshow.js')
        
    body
        h1 Talkshow.js
        #grid
        #horiz.pointer ⬇
        #vert.pointer ➨
        #settings
            input#editSwitch(type="checkbox")
            span edit mode
            ul#colors.showInEditMode
        
        #dialogs
            .soundDropped
                .dialog
                    .title Ist diese Sounddatei als Navigationsansage für Sehbehinderte Benutzer gedacht, oder als Inhalt (Musik/Hörbuch)?
                    .choice(type="navigationSound") Navigationsansage
                    .choice(type="sound") Musik/Hörbuch
                    .choice Abbrechen

            .imageDropped
                .dialog
                    .title Ist diese Bilddatei als Symbol, als Feldhintergrund  oder als Inhalt (Foto) gedacht?
                    .choice(type="icon") Symbol
                    .choice(type="background") Feldhintergrund
                    .choice(type="photo") Foto
                    .choice Abbrechen
                        
:stylus
    .dialog
        position: absolute
        width:50%
        left: 25%
        top: 10%
        background-color: rgba(255,255,255,0.8)
        -webkit-box-shadow: 0px 0px 18px black
        font-size: 2.5em
        padding: 50px
        -webkit-border-radius: 25px
        line-height: 140%
        
        
    .dialog .title
        font-size: 1.2em
        weight: 1000
        margin-bottom: 2em
        
    .dialog .choice
        display: inline-block
        background-color: #555
        color: white
        -webkit-border-radius: 40px
        padding: 10px 30px
        margin: 20px
        
    .dialog .choice:hover
        background-color: blue
    

    body
        background-color: #f4f4ed
        font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif 
        line-height: 160%
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2)
        color: #666
    
    h1
        background-color: #555
        font-size: 40pt
        margin: 0px 20px
        color: #aaa
    
    #grid
        margin: 50px 50px
        height:800px
        background-color: rgba(0,0,0,0.1)

    .pointer
        position: absolute
        font-size: 50pt
        display: none
        
    table
        width: 100%
        height: 100%
        table-layout: fixed
        border-spacing: 25px
        
    td
        vertical-align: middle
        border-collapse: collapse
        -webkit-border-radius: 32px
        border: 4px solid rgba(255,255,255,0.2)
        -webkit-box-shadow: 2px 2px 8px rgba(0,0,0,0.3), inset -1px -4px 32px rgba(0,0,0,0.8), inset 1px 4px 16px white
        background-image: -webkit-linear-gradient(bottom, rgba(99,99,99,0.1) 54%, rgba(210,210,210,0.1) 55%, rgb(220,220,220,0.1) 85%);
        background-repeat: no-repeat
        padding 0 0
        text-align: center
        overflow: hidden
        position: relative
        height: 250px
     
     td .iconbar
        text-align: right
        position: absolute
        left: 0px
        top: 20px
        width: 100%

     td .iconbar img
        margin-right: 50px
     
     td .label
        display: block
        font-size:28pt
        font-weight: 800
        
     td img
        padding-top: 15px
        padding-bottom: 25px
     
     td.dragTarget
        border: 4px dotted white
     
    .current_horiz, .current_vert
       -webkit-box-shadow inset 0px 0px 20px 30px #ddd
     
    .current_horiz
       background-color: #99a !important

    .current_vert
        background-color: #9a9 !important

    .current_horiz.current_vert, td:hover, .keyboardFocus
        background-color: white !important
        -webkit-box-shadow inset 0px 0px 20px 30px yellow

    #settings
        margin: 50px 50px
        color: black
        
    #colors
        list-style: none
        
    #colors li
        display: inline-block
        width: 32px
        height: 32px
        border: 1px solid #aaa
        margin-right: 4px

:coffeescript
    $ ->
        window.uniqueId = do ->
            currId = localStorage.getItem("currId")
            if not currId? then currId = 0
            return () ->
                ret = currId
                currId++
                localStorage.setItem("currId", currId)
                return ret

        $(".dialog").hide()
        talkshow = new Talkshow()
    
